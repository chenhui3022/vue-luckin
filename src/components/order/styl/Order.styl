.total
  overflow hidden
  width 100%
  height 0
  padding-bottom 142%
  background #eee
  margin-bottom 1.2rem
  .total-list
    border-top .01rem solid #eee
    .wrapper
      width 100%
      height 0
      padding-bottom 35%
      background #ffffff
      margin-top .2rem
      .wrapper_list
        overflow: hidden
        line-height .8rem
        border-bottom .01rem solid #eee
        .number
          float left
          padding-left .2rem
        .status
          float right
          padding-right .2rem
      .addr
        overflow: hidden
        line-height .8rem
        .local
          float left
          padding-left .2rem
          .goods
            font-size 12px
            color: #333333
            line-height .3rem
            .num
              padding-left .2rem
      .price_list
        line-height .8rem
        .price
          float left
          padding-left .2rem
        .again
          float right
          border .01rem solid #cacaca
          border-radius .1rem
          padding 0 .2rem
          margin-right .2rem
          line-height .5rem
        .time
          float right
          font-size .1rem
          padding-right .2rem
    .item
      line-height .8rem
      text-align center
      font-size .3rem
      background #ffffff
      color #cacaca
